<div class="container text-center w-50">
    <h1 class="text-center">Leader Board</h1>
    {{#if scores}}
    <div class="container">
            <div class="row pt-3 mb-5">
                {{# each scores as |val key|}}
                
                    <div class="col-2">
                       {{key}} |
                    </div>
                    <div class="col-4">
                         {{ val.username }}
                    </div>
                    <div class="col-2">
                        {{ val.score }}
                    </div>
                    <div class="col-4">
                         {{ val.lastGame }}
                    </div>
                {{/each}}
            </div>
        <a class="btn btn-success" href="/profile">Profile</a>
    </div>
    {{/if}}
</div>